# Frontend Configuration (Vite Environment Variables)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# GitHub OAuth (for frontend GitHub login)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# Google OAuth (for frontend Google login)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/hr/auth/callback

# Google Form URL for HR registration
VITE_GOOGLE_FORM_URL=https://docs.google.com/forms/d/e/your_form_id/viewform

# Environment
VITE_ENVIRONMENT=development

# Development Login (TESTING ONLY - Remove after testing!)
# WARNING: This bypasses OAuth authentication. Only for development/testing.
# Set to 'true' to enable the dev login feature on /hr/auth page
# REMOVE THIS LINE BEFORE PRODUCTION DEPLOYMENT
VITE_ENABLE_DEV_LOGIN=false
