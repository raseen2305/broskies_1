# Legacy Database Configuration (for backward compatibility)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app
DATABASE_NAME=git_Evaluator

# Multi-Database Architecture Configuration
# External Users Database
EXTERNAL_USERS_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/external_users?retryWrites=true&w=majority&appName=your-app

# Raseen Region Databases
RASEEN_TEMP_USER_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/raseen_temp_user?retryWrites=true&w=majority&appName=your-app
RASEEN_MAIN_USER_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/raseen_main_user?retryWrites=true&w=majority&appName=your-app
RASEEN_MAIN_HR_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/raseen_main_hr?retryWrites=true&w=majority&appName=your-app

# SRIE Region Databases (Backup)
SRIE_MAIN_USER_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/srie_main_user?retryWrites=true&w=majority&appName=your-app
SRIE_MAIN_HR_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/srie_main_hr?retryWrites=true&w=majority&appName=your-app

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GitHub Configuration (Get from GitHub Developer Settings)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_TOKEN=your_github_personal_access_token

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google OAuth for HR Dashboard (Get from Google Cloud Console)
GOOGLE_HR_CLIENT_ID=your_google_hr_client_id
GOOGLE_HR_CLIENT_SECRET=your_google_hr_client_secret
GOOGLE_HR_REDIRECT_URI=http://localhost:5173/hr/auth/callback
GOOGLE_FORM_URL=https://docs.google.com/forms/d/e/1FAIpQLSfpKFvNqca-W4fvPn7sa1zm6NpJpzvZYY948fk4_YbPdDRilA/viewform

# Redis Configuration (for Celery task queue)
REDIS_URL=redis://localhost:6379
# For Redis Cloud: redis://password@host:port

# Environment Configuration
ENVIRONMENT=development

# Frontend/API URLs (optional - will auto-detect if not set)
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
JSON_LOGGING=false