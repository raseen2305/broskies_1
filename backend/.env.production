# Production Environment Configuration for Backend

# Core Application
APP_NAME=GitHub Repository Evaluator
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Legacy Database Configuration (for backward compatibility)
MONGODB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/?retryWrites=true&w=majority&appName=github-evaluator-prod
DATABASE_NAME=git_Evaluator

# Multi-Database Architecture Configuration (Production)
# External Users Database
EXTERNAL_USERS_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/external_users?retryWrites=true&w=majority&appName=github-evaluator-prod

# Raseen Region Databases
RASEEN_TEMP_USER_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/raseen_temp_user?retryWrites=true&w=majority&appName=github-evaluator-prod
RASEEN_MAIN_USER_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/raseen_main_user?retryWrites=true&w=majority&appName=github-evaluator-prod
RASEEN_MAIN_HR_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/raseen_main_hr?retryWrites=true&w=majority&appName=github-evaluator-prod

# SRIE Region Databases (Backup)
SRIE_MAIN_USER_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/srie_main_user?retryWrites=true&w=majority&appName=github-evaluator-prod
SRIE_MAIN_HR_DB_URL=mongodb+srv://prod_user:prod_password@prod-cluster.mongodb.net/srie_main_hr?retryWrites=true&w=majority&appName=github-evaluator-prod

# Redis Configuration
REDIS_URL=redis://username:password@prod-redis-cluster:6379/0

# Security
JWT_SECRET_KEY=your-super-secure-production-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# OAuth Providers (Production) - Vercel Deployment
GITHUB_CLIENT_ID=your-production-github-oauth-app-client-id
GITHUB_CLIENT_SECRET=your-production-github-oauth-app-secret
GITHUB_REDIRECT_URI=https://broskies.vercel.app/api/auth/github/callback

GOOGLE_CLIENT_ID=your-production-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-production-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://broskies.vercel.app/api/auth/google/callback

# External API Keys
GITHUB_API_TOKEN=ghp_your-production-github-personal-access-token
GITHUB_API_BASE_URL=https://api.github.com

# CORS Configuration for Vercel Deployment
FRONTEND_URL=https://broskies.vercel.app
CORS_ORIGINS=["https://broskies.vercel.app", "https://broskieshub.vercel.app", "https://brokies-v2.vercel.app", "https://brokiesv2.vercel.app"]
CORS_ALLOW_CREDENTIALS=true
VERCEL_ENV=production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Background Tasks
CELERY_BROKER_URL=redis://username:password@prod-redis-cluster:6379/1
CELERY_RESULT_BACKEND=redis://username:password@prod-redis-cluster:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/var/log/github-evaluator/app.log

# Performance
CACHE_TTL_SECONDS=3600
MAX_REPOSITORIES_PER_SCAN=50
SCAN_TIMEOUT_MINUTES=30

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=noreply@github-evaluator.com

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=github-evaluator-production
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.github-evaluator.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/github-evaluator.crt
SSL_KEY_PATH=/etc/ssl/private/github-evaluator.key

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30