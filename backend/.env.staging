# Staging Environment Configuration

# Core Application
APP_NAME=GitHub Repository Evaluator (Staging)
VERSION=1.0.0-staging
DEBUG=false
ENVIRONMENT=staging
VERCEL_ENV=preview

# Legacy Database Configuration (for backward compatibility)
MONGODB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/?retryWrites=true&w=majority&appName=github-evaluator-staging
DATABASE_NAME=git_Evaluator

# Multi-Database Architecture Configuration (Staging)
# External Users Database
EXTERNAL_USERS_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/external_users_staging?retryWrites=true&w=majority&appName=github-evaluator-staging

# Raseen Region Databases
RASEEN_TEMP_USER_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/raseen_temp_user_staging?retryWrites=true&w=majority&appName=github-evaluator-staging
RASEEN_MAIN_USER_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/raseen_main_user_staging?retryWrites=true&w=majority&appName=github-evaluator-staging
RASEEN_MAIN_HR_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/raseen_main_hr_staging?retryWrites=true&w=majority&appName=github-evaluator-staging

# SRIE Region Databases (Backup)
SRIE_MAIN_USER_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/srie_main_user_staging?retryWrites=true&w=majority&appName=github-evaluator-staging
SRIE_MAIN_HR_DB_URL=mongodb+srv://staging_user:staging_password@staging-cluster.mongodb.net/srie_main_hr_staging?retryWrites=true&w=majority&appName=github-evaluator-staging

# Redis Configuration
REDIS_URL=redis://staging_password@staging-redis-cluster:6379/0

# Security
SECRET_KEY=your-staging-jwt-secret-key-different-from-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Providers (Staging) - Preview Deployment
GITHUB_CLIENT_ID=your-staging-github-oauth-app-client-id
GITHUB_CLIENT_SECRET=your-staging-github-oauth-app-secret
GITHUB_TOKEN=ghp_your-staging-github-personal-access-token

GOOGLE_CLIENT_ID=your-staging-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-oauth-client-secret

# Frontend/API URLs (Vercel Preview)
FRONTEND_URL=https://your-preview-url.vercel.app
API_BASE_URL=https://your-preview-url.vercel.app/api

# CORS Configuration for Staging
CORS_ORIGINS=["https://your-preview-url.vercel.app", "https://staging.broskies.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (More lenient for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200

# Logging (More verbose for debugging)
LOG_LEVEL=DEBUG
JSON_LOGGING=true

# HR Configuration (Staging)
GOOGLE_HR_CLIENT_ID=your-staging-google-hr-client-id
GOOGLE_HR_CLIENT_SECRET=your-staging-google-hr-client-secret
GOOGLE_HR_REDIRECT_URI=https://your-preview-url.vercel.app/hr/auth
GOOGLE_FORM_URL=https://docs.google.com/forms/d/staging-form-id/viewform

# Development/Testing Configuration
ENABLE_DEV_LOGIN=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30