# Test Environment Configuration

# Core Application
APP_NAME=GitHub Repository Evaluator (Test)
VERSION=1.0.0-test
DEBUG=true
ENVIRONMENT=test

# Legacy Database Configuration (for backward compatibility)
MONGODB_URL=mongodb://localhost:27017/git_Evaluator_test
DATABASE_NAME=git_Evaluator_test

# Multi-Database Architecture Configuration (Test)
# Use local MongoDB or test cluster
# External Users Database
EXTERNAL_USERS_DB_URL=mongodb://localhost:27017/external_users_test

# Raseen Region Databases
RASEEN_TEMP_USER_DB_URL=mongodb://localhost:27017/raseen_temp_user_test
RASEEN_MAIN_USER_DB_URL=mongodb://localhost:27017/raseen_main_user_test
RASEEN_MAIN_HR_DB_URL=mongodb://localhost:27017/raseen_main_hr_test

# SRIE Region Databases (Backup)
SRIE_MAIN_USER_DB_URL=mongodb://localhost:27017/srie_main_user_test
SRIE_MAIN_HR_DB_URL=mongodb://localhost:27017/srie_main_hr_test

# Redis Configuration (Local or test instance)
REDIS_URL=redis://localhost:6379/1

# Security (Test keys - not secure)
SECRET_KEY=test-secret-key-not-for-production-use-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OAuth Providers (Test/Mock)
GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret
GITHUB_TOKEN=ghp_test_token_for_testing

GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret

# Frontend/API URLs (Test)
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# CORS Configuration (Permissive for testing)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173", "http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (Disabled for testing)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Logging (Verbose for debugging)
LOG_LEVEL=DEBUG
JSON_LOGGING=false

# HR Configuration (Test)
GOOGLE_HR_CLIENT_ID=test_google_hr_client_id
GOOGLE_HR_CLIENT_SECRET=test_google_hr_client_secret
GOOGLE_HR_REDIRECT_URI=http://localhost:3000/hr/auth
GOOGLE_FORM_URL=https://docs.google.com/forms/d/test-form-id/viewform

# Development/Testing Configuration
ENABLE_DEV_LOGIN=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=10

# Test-specific Configuration
PYTEST_CURRENT_TEST=true
DISABLE_EXTERNAL_APIS=true
USE_MOCK_DATABASES=false